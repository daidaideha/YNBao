<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <include layout="@layout/view_header"/>
    
	<ImageButton 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ibnt_person_namedone"
	    android:background="@drawable/bg_person_save"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="20sp"
	    />    
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_person_modifyname"
            android:background="@drawable/bg_person_modifyall"
            android:inputType="text"
            android:paddingLeft="20sp"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_person_del"
            android:background="@drawable/edt_person_del"
            android:layout_alignRight="@id/edit_person_modifyname"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            />
        </RelativeLayout>
        
        <TextView 
            android:paddingTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_person_remind"
            android:text="@string/txt_person_remind"
            android:textColor="@color/blue"
            />
        
        
    </LinearLayout>
    
    
    
    
    

</LinearLayout>
