<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/view_header"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--  -->
        <RelativeLayout 
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_group_manager"
            >
            <TextView 
                android:id="@+id/txt_group_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_group_groupmanager"
                android:paddingLeft="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/group_huise"
           		/>
            <ImageView 
                android:layout_marginLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_group_manager"
                android:layout_toRightOf="@id/txt_group_manager"
                android:contentDescription="@string/hello_world"
                android:background="@drawable/img_group_manager"
                android:layout_centerVertical="true"
                />
            <LinearLayout 
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/img_group_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/txt_group_mangername"
                    android:text="某某"
                    />
                <TextView 
                    android:paddingTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txt_group_createdate"
                    android:text="创建于2012—06—19"
                    android:textColor="@color/group_huise"
                    />
                
                
            </LinearLayout>
            
        </RelativeLayout>
        <!--  -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_group_number"
            >
            <TextView 
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_group_numberchar"
                android:text="@string/txt_group_number"
                android:textColor="@color/group_huise"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_group_number"
                android:text="123456789"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20sp"
                android:drawableRight="@drawable/img_group_more"
                android:paddingRight="20sp"
                />
            
        </LinearLayout>
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_line"
            android:contentDescription="@string/hello_world"
            />
        <!--  -->
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_group_member"
            >
            <RelativeLayout 
                android:id="@+id/rl_group_member"
                android:paddingLeft="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView 
                    android:id="@+id/txt_group_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_group_member"
                    android:textColor="@color/group_huise"
                    
                    />
                <TextView 
                    android:id="@+id/txt_group_membernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/group_huise"
                    android:layout_below="@id/txt_group_member"
                    android:layout_alignRight="@id/txt_group_member"
                    />
            </RelativeLayout>
            
            <ImageView 
                android:layout_marginLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_group_imgleft"
                android:background="@drawable/img_group_left"
                android:contentDescription="@string/hello_world"
                android:layout_toRightOf="@id/rl_group_member"
                android:layout_centerVertical="true"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:id="@+id/img_group_mid"
                android:background="@drawable/img_group_mid"
                android:contentDescription="@string/hello_world"
                android:layout_toRightOf="@id/img_group_imgleft"
                android:layout_centerVertical="true"
                />
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:id="@+id/img_group_right"
                android:background="@drawable/img_group_right"
                android:contentDescription="@string/hello_world"
                android:layout_toRightOf="@id/img_group_mid"
                android:layout_centerVertical="true"
                />
            <ImageButton 
                android:id="@+id/img_group_imgmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_group_more"
                android:contentDescription="@string/hello_world"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20sp"
                />
        </RelativeLayout>
        
        <!--  -->
        <TextView 
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_group_image"
            android:text="@string/txt_group_image"
            android:textColor="@color/group_huise"
            android:background="@drawable/img_group_image"
            android:drawableRight="@drawable/img_group_more"
            android:layout_marginRight="20sp"
            android:gravity="center_vertical"
            />
        
        <!--  -->
        <TextView 
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_group_question"
            android:text="@string/txt_group_qution"
            android:textColor="@color/group_huise"
            android:background="@drawable/img_group_image"
            android:drawableRight="@drawable/img_group_more"
            android:layout_marginRight="20sp"
            android:gravity="center_vertical"
            />
        <!--  -->
        <RelativeLayout 
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_image"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_group_note"
                android:text="@string/txt_group_groupnote"
                android:textColor="@color/group_huise"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_group_notenum"
                android:text="3条"
                android:textColor="@color/group_huise"
                android:layout_toRightOf="@id/txt_group_note"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:drawableRight="@drawable/img_group_more"
                android:drawablePadding="20sp"
                android:layout_marginRight="20sp"
                />
        </RelativeLayout>
        
        <!--  -->
        <LinearLayout 
            android:paddingLeft="20sp"
            android:paddingRight="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_image"
            >
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/txt_group_level"
            	android:textColor="@color/group_huise"
            	android:layout_gravity="center_vertical"
            />
            <TextView 
                android:id="@+id/txt_group_grouplevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9级"
                android:gravity="right"
                android:textColor="@color/group_huise"
                android:layout_gravity="center_vertical"
                />
            
        </LinearLayout>
        
        <!--  -->
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_line"
            android:contentDescription="@string/hello_world"
            />
        <!--  -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_image"
            android:paddingLeft="20sp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_group_address"
                android:textColor="@color/group_huise"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/txt_group_address"
                android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="浙江杭州滨江"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <!--  -->
        <LinearLayout 
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_image"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_group_category"
                android:textColor="@color/group_huise"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/txt_group_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玉米（宁波）"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20sp"
                />
        </LinearLayout>
        
        <!--  -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_image"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_group_info"
                android:textColor="@color/group_huise"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/txt_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="该群是......"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/img_group_more"
                />
            
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_group_addbg"
        android:layout_alignParentBottom="true"
        >
        <TextView 
        android:id="@+id/txt_group_addgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_group_add"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_group_addbutton"
            android:layout_toLeftOf="@id/txt_group_addgroup"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:contentDescription="@string/hello_world"
            />
        
    	</RelativeLayout>
    </RelativeLayout>

</LinearLayout>
