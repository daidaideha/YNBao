<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/view_header"/>
    <!--  -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:background="@drawable/bg_group_headimg"
        >
        <TextView 
            android:id="@+id/txt_group_personhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_head"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:id="@+id/img_group_personhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_group_touxiang"
            android:layout_toRightOf="@id/txt_group_personhead"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_group_personsigndate"
            android:text="注册时间：2014-09-06"
            android:paddingTop="20sp"
            android:layout_toRightOf="@id/img_group_personhead"
            android:layout_marginLeft="10sp"
            />
    </RelativeLayout>
    
    <!--  -->
    <LinearLayout 
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_group_personsex"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_sex"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/txt_group_personsex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textColor="@color/group_huise"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40sp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:background="@drawable/bg_group_personsex"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_realname"
            android:layout_gravity="center_vertical"
            />
        
        <TextView 
            android:id="@+id/txt_group_personrealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="东阳"
            android:textColor="@color/group_huise"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_group_personinfo"
        android:paddingTop="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="10sp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_introduce"
            />
        <TextView 
            android:id="@+id/txt_group_personintroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="阿双方就哦啊个机会将覅盾很贵恶化积分哈丢分啥地方干活接电话覅就。"
            android:textColor="@color/group_huise"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_group_personsex"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_hobby"
            android:layout_gravity="center_vertical"
            />
        
        <TextView 
            android:id="@+id/txt_group_personhobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢锻炼、脱口秀、唱歌。"
            android:textColor="@color/group_huise"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>
    
    <!--  -->
    <LinearLayout 
        android:background="@drawable/bg_group_personsex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_personlevel"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/txt_group_personlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5级"
            android:textColor="@color/group_huise"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60sp"
            />
    </LinearLayout>
    
    <!--  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_group_personsex"
        android:paddingLeft="20sp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_group_area"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/txt_group_personaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浙江杭州"
            android:textColor="@color/group_huise"
            android:paddingLeft="60sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    
    <Button 
        android:layout_margin="30sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:text="@string/txt_group_drop"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="#FF0000"
        />
    

</LinearLayout>
