<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
    <include layout="@layout/view_header"/>
    
	<ImageButton 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ibnt_person_namedone"
	    android:background="@drawable/bg_person_save"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="20sp"
	    />    
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical" >
			<LinearLayout 
			    
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_person_modify"
			    >
			    <ImageView 
			        android:layout_marginLeft="20sp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/img_person_headview"
			        android:background="@drawable/bg_person_modifyhead"
			        android:layout_gravity="center_vertical"
			        />
			    <TextView
                android:id="@+id/txt_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/bg_person_modifyright"
                android:gravity="center_vertical"
                android:paddingLeft="40sp"
                android:paddingRight="20sp"
                android:text="@string/txt_person_modifyhead" 
                android:layout_gravity="center_vertical"
                />
			    
			    
			</LinearLayout>
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/bg_person_username" >

                <TextView
                    android:id="@+id/txt_person_username"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:text="@string/txt_person_username" />

                <TextView
                    android:id="@+id/txt_person_usernameedit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="CESHI" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_person_realname" >

                <TextView
                    android:id="@+id/txt_person_realname"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:text="@string/txt_person_realname" />

                <TextView
                    android:id="@+id/txt_person_realnameedit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Ceshi2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_person_realname" >

                <TextView
                    android:id="@+id/txt_person_sex"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:text="@string/txt_person_sex" />

                <TextView
                    android:id="@+id/txt_person_sexedit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Ceshi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_person_realname" >

                <TextView
                    android:id="@+id/txt_person_address"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:text="@string/txt_person_address" />

                <TextView
                    android:id="@+id/txt_person_addressedit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="ceshi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_person_note"
                android:paddingTop="20sp" >

                <TextView
                    android:id="@+id/txt_person_note"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:text="@string/txt_person_personnote" />

                <TextView
                    android:id="@+id/txt_person_noteedit"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="对方会哦该湖化工噶舒服噶哈哈翻盖风格·阿瓜父爱功夫一个·就啊哈覅去风格" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ly_crops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txt_person_crop"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_person_crop"
                        android:gravity="center"
                        android:text="@string/txt_person_crops" />

                    <TextView
                        android:id="@+id/txt_person_acres"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_person_crop"
                        android:gravity="center"
                        android:text="@string/txt_person_acres" />
                </LinearLayout>
                <ListView
        			android:id="@+id/listview_person"
       				android:layout_width="match_parent"
       				android:layout_height="match_parent"
        			android:scrollbars="@null" />
                <Button 
                    android:id="@+id/btn_person_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_person_add"
                    android:text="@string/txt_person_add"
                    android:textColor="@color/color_orange"
                    />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>