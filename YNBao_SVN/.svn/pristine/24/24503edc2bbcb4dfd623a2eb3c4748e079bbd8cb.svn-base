<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10sp" >

    <ImageView
        android:id="@+id/img_group_grouphead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_group_grouphead"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp" >

        <TextView
            android:id="@+id/txt_group_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联庄小伙伴爱吃米！"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_group_imglevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_group_groupname"
            android:layout_marginTop="5sp"
            android:background="@drawable/img_group_grouplevel"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_group_groupnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_group_groupname"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@id/txt_group_imglevel"
            android:text="59/100"
            android:textColor="@color/group_huise" />

        <TextView
            android:id="@+id/txt_group_groupindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_group_imglevel"
            android:layout_marginTop="5sp"
            android:ellipsize="end"
            android:lines="1"
            android:text="这是一群爱好绿色的人们......"
            android:textColor="@color/group_huise" />
    </RelativeLayout>

</LinearLayout>