<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <include layout="@layout/view_header"/>
    
	<ImageButton 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ibnt_person_sexdone"
	    android:background="@drawable/bg_person_save"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="20sp"
	    />
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="vertical"
        >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
    <TextView 
        android:id="@+id/txt_person_sexman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_person_sexman"
        android:background="@drawable/bg_person_sexman"
        android:paddingRight="20sp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        />
    <ImageView 
        android:id="@+id/img_person_man"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txt_person_sexman"
        android:background="@drawable/bg_person_choicesex"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      	<TextView 
        	android:id="@+id/txt_person_sexwoman"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/txt_person_sexwoman"
       		android:background="@drawable/bg_person_sexman"
        	android:paddingRight="20sp"
        	android:textSize="20sp"
        	android:gravity="center_vertical"
        	android:paddingLeft="20sp"
        
        />
        <ImageView 
            android:id="@+id/img_person_woman"
        	android:visibility="invisible"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignRight="@id/txt_person_sexwoman"
        	android:background="@drawable/bg_person_choicesex"
        	android:layout_centerVertical="true"
        />
        
    </RelativeLayout>
  
    </LinearLayout>

</LinearLayout>
