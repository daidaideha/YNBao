<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/view_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <EditText
            android:id="@+id/edt_findback_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_findback"
            android:drawableLeft="@drawable/icon_findback_phone"
            android:drawablePadding="10dp"
            android:hint="@string/tv_findback_phone"
            android:inputType="phone"
            android:paddingLeft="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/edt_findback_getmessage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_edit_findback_little"
                android:inputType="number" >
            </EditText>

            <Button
                android:id="@+id/btn_findback_getmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_findback_code"
                android:gravity="center"
                android:text="@string/tv_findback_getcode"
                android:textColor="@color/blue" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_findback_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_header"
            android:text="@string/btn_findback_done"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>