<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
    <include layout="@layout/view_header" />
    
    <ImageButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_group_add"
        android:background="@drawable/img_group_add"
        android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="10sp"
	    android:contentDescription="@string/hello_world"
        
        />
    
    <ImageButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_group_recosearch"
        android:background="@drawable/icon_group_serch"
        android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="10sp"
	    android:contentDescription="@string/hello_world"
	    android:visibility="gone"
        
        />
    
    <EditText 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_group_recosearch"
        android:hint="@string/txt_group_searchhint"
        android:background="@drawable/bg_group_recom"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_list"
        android:id="@+id/ly_group_list"
        >
        <TextView 
            android:id="@+id/txt_group_hotgroup"
            android:layout_width="0dip"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:text="@string/txt_group_hotgroup"
			android:gravity="center"
			android:drawableRight="@drawable/img_group_listshu"
			android:drawableBottom="@drawable/img_group_listheng"
            />
        <TextView 
            android:id="@+id/txt_group_recommend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_group_groupsrecommend"
            android:gravity="center"
            android:drawableRight="@drawable/img_group_listshu"
            android:drawableBottom="@drawable/img_group_listheng"
            android:drawableLeft="@drawable/img_group_listshu"
            />
        <TextView 
            android:id="@+id/txt_group_dynamic"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_group_dynamic"
            android:gravity="center"
            android:drawableBottom="@drawable/img_group_listheng"
            android:drawableLeft="@drawable/img_group_listshu"
            />
    </LinearLayout>
    

 
        <LinearLayout
            android:id="@+id/ll_group_bodyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    

</LinearLayout>
