            android:name="com.innouni.yinongbao.activity.ResgisterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        
        <!-- the ask activity -->
        <activity
            android:name="com.innouni.yinongbao.activity.ask.AskActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        
        <!-- the exper activity -->
        <activity
            android:name="com.innouni.yinongbao.activity.expert.ExperDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.innouni.yinongbao.activity.expert.ExpertMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>