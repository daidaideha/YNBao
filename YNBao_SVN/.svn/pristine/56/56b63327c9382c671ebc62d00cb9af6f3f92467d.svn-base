<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/view_header" />

    <EditText
        android:id="@+id/edt_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edt_findback"
        android:drawableLeft="@drawable/icon_findback_phone"
        android:drawablePadding="10dp"
        android:hint="@string/hint_phonenum"
        android:inputType="phone"
        android:paddingLeft="10sp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edt_findback"
        android:drawableLeft="@drawable/icon_login_password"
        android:drawablePadding="10dp"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:paddingLeft="10sp" />

    <EditText
        android:id="@+id/edt_resurepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edt_findback"
        android:drawableLeft="@drawable/icon_login_password"
        android:drawablePadding="10dp"
        android:hint="@string/hint_resurepass"
        android:inputType="textPassword"
        android:paddingLeft="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/edt_getcode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_getcode"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/btn_findback_code"
            android:text="@string/btn_getmessage"
            android:textColor="#1E90FF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/txt_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip" />

        <TextView
            android:id="@+id/txt_refereenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/btn_more"
            android:text="@string/txt_referee"
            android:textColor="#b9b9b9"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_refereenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edt_findback"
        android:drawableLeft="@drawable/icon_login_referee"
        android:drawablePadding="10dp"
        android:hint="@string/hint_refereenum"
        android:paddingLeft="10sp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/chk_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="@string/rbtn_agreesign"
        android:textColor="#1fb7f6" />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_header"
        android:text="@string/btn_regsign"
        android:textColor="#ffffff" />

</LinearLayout>