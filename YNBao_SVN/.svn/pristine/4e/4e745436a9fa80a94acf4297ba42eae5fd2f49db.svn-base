<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header" >

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_main_bottom"
        android:layout_below="@+id/rl_header" >

        <LinearLayout
            android:id="@+id/ll_bodyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/line_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:id="@+id/txt_main_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5sp"
            android:drawableTop="@drawable/icon_main_tab_home"
            android:gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="@string/txt_main_home"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_main_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5sp"
            android:drawableTop="@drawable/icon_main_tab_collect"
            android:gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="@string/txt_main_collect"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_main_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5sp"
            android:drawableTop="@drawable/icon_main_tab_person"
            android:gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="@string/txt_main_person"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_main_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5sp"
            android:drawableTop="@drawable/icon_main_tab_set"
            android:gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="@string/txt_main_set"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>