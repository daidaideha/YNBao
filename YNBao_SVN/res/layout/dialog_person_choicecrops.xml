<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <LinearLayout 
         android:id="@+id/ly_person_top"
         android:layout_width="match_parent"
         android:layout_height="30sp"
         android:layout_above="@+id/ly_person_mid"
         android:layout_marginLeft="15sp"
         android:layout_marginRight="15sp"
         >
         <TextView 
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:text="@string/txt_person_crops"
        	android:background="@drawable/bg_person_mdycrops"
        	android:gravity="center"
        />
         
         <TextView 
             android:layout_width="0dip"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="@string/txt_person_acres"
             android:background="@drawable/bg_person_mdyarces"
             android:gravity="center"
             />
         
     </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ly_person_mid"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_centerInParent="true"
        >
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ListView
                android:id="@+id/list_person_crops"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:drawableBottom="@drawable/bg_person_bottomline"
                android:drawableLeft="@drawable/bg_person_rightline"
                android:gravity="center"
                android:text="@string/txt_person_acres1" />

            <TextView 
                android:drawableLeft="@drawable/bg_person_rightline"
                android:drawableBottom="@drawable/bg_person_bottomline"
                android:layout_height="50sp"
                android:layout_width="match_parent"
                android:text="@string/txt_person_acres2"
                android:gravity="center"
                />
            <TextView 
                android:drawableLeft="@drawable/bg_person_rightline"
                android:drawableBottom="@drawable/bg_person_bottomline"
                android:layout_height="50sp"
                android:layout_width="match_parent"
                android:text="@string/txt_person_acres3"
                android:gravity="center"
                />
            <TextView 
                android:drawableLeft="@drawable/bg_person_rightline"
                android:drawableBottom="@drawable/bg_person_bottomline"
                android:layout_height="50sp"
                android:layout_width="match_parent"
                android:text="@string/txt_person_acres4"
                android:gravity="center"
                />
            <TextView 
                android:drawableLeft="@drawable/bg_person_rightline"
                android:drawableBottom="@drawable/bg_person_bottomline"
                android:layout_height="50sp"
                android:layout_width="match_parent"
                android:text="@string/txt_person_acres5"
                android:gravity="center"
                />
            
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
         android:id="@+id/ly_person_bottom"
         android:layout_width="match_parent"
         android:layout_height="30sp"
         android:layout_below="@+id/ly_person_mid"
         android:layout_marginLeft="15sp"
         android:layout_marginRight="15sp"
         >
         <TextView 
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:text="@string/txt_person_cancel"
            android:textColor="@color/call_red"
            android:gravity="center"
        />
         <TextView 
             android:drawableLeft="@drawable/bg_person_rightline"
             android:layout_width="0dip"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="@string/txt_person_ok"
             android:textColor="@color/blue"
                android:gravity="center"
             />
         
     </LinearLayout>
    

</RelativeLayout>
