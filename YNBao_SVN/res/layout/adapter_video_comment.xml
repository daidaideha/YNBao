<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="5sp"
    >
    <ImageView 
        android:id="@+id/img_video_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_video_head"
        android:contentDescription="@string/hello_world"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_video_username"
        android:text="用户 2740099867"
        android:layout_toRightOf="@id/img_video_head"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_video_realcomment"
        android:text="这个视频拍的很好，让我知道了番茄的种植技巧等等。"
        android:lines="2"
        android:layout_toRightOf="@id/img_video_head"
        android:layout_below="@id/txt_video_username"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_video_commtime"
        android:text="今天"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
